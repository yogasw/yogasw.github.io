{
  "name": "yogasw-site",
  "version": "1.0.0",
  "scripts": {
    "build:tools": "node scripts/build_tools.js",
    "build:css": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/output.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/output.css --watch",
    "predev": "npm run build:tools && npm run build:css",
    "dev": "hugo server"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@thulite/doks-core": "^1.6.0",
    "@thulite/seo": "^2.3.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.17"
  }
}
