{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">

  <!-- Homepage -->
  <url>
    <loc>{{ .Site.BaseURL }}</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Blog List Page -->
  <url>
    <loc>{{ .Site.BaseURL }}blog/</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Tools Page -->
  <url>
    <loc>{{ .Site.BaseURL }}tools/</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Blog Posts -->
  {{ range where .Site.RegularPages "Section" "blog" }}
  <url>
    <loc>{{ .Permalink }}</loc>
    <lastmod>{{ .Lastmod.Format "2006-01-02" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  {{ end }}

  <!-- Individual Tools -->
  <url>
    <loc>{{ .Site.BaseURL }}tools/base64</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ .Site.BaseURL }}tools/date-time-diff</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ .Site.BaseURL }}tools/dialogflow-tools</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ .Site.BaseURL }}tools/json-parser</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ .Site.BaseURL }}tools/json-to-curl</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ .Site.BaseURL }}tools/wame-link-generator</loc>
    <lastmod>{{ now.Format "2006-01-02" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>

</urlset>
